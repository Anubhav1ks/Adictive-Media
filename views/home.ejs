    <div class="container">
      <main>
        <div class="py-5 text-center">
          <h2>Application Form</h2>
        </div>
    
        <div class="row g-5">

          <div class="form container col-md col-lg">
            <form class="needs-validation" method="post" action="/" enctype="multipart/form-data" novalidate>
              <div class="row g-3">
                <div class="col-sm-6">
                  <label for="firstName" class="form-label">First name</label>
                  <input type="text" name="firstname" class="form-control" id="firstName" placeholder="" value="" required>
                  <div class="invalid-feedback">
                    Valid first name is required.
                  </div>
                </div>
    
                <div class="col-sm-6">
                  <label for="lastName" class="form-label">Last name</label>
                  <input type="text" name="lastname" class="form-control" id="lastName" placeholder="" value="" required>
                  <div class="invalid-feedback">
                    Valid last name is required.
                  </div>
                </div>
    

                <div class="col-12">
                    <label for="address" class="form-label">Date of Birth</label>
                    <input type="date" class="form-control" name="dob" id="address" placeholder="DOB" required>
                    <div class="invalid-feedback">
                      Please enter your DOB.
                    </div>
                </div>
    
                <div class="col-md-5">
                  <label for="country" class="form-label">Country</label>
                  
                  <input type="text" class="form-control" name="country" placeholder="Type Name to Search. . ." id="input" list="country" onkeyup="Searching()">
                  <datalist class=""  id="country" required>
                    <!-- <option value="">Choose...</option> -->
                    <%  country.forEach(function(post){ %>
                      <option value="<%=post%>"></option>
                    <% }) %>
                  </datalist>
                  <div class="invalid-feedback">
                    Please select a valid country.
                  </div>
                </div>
    
              <hr class="my-4">
    
              <div class="row gy-3">
                <div class="col-md-3">
                  <label for="cc-expiration" class="form-label">Resume</label>
                  <input type="file" name="resume" class="form-control" id="cc-expiration" placeholder="" required>
                  <div class="invalid-feedback">
                    Resuma required
                  </div>
                </div>
              </div>

              <button class="w-100 btn btn-primary btn-lg" type="submit">Continue to checkout</button>
            </form>
          </div>
        </div>
      </main>
    


